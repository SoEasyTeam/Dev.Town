{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@constants": ["src/constants"],
            "@hooks": ["src/hooks"],
            "@pages": ["src/pages"],
            "@redux": ["src/redux"],
            "@utils": ["src/utils"],
            "@public": ["../public"],
            "@/*": ["src/*"]
        }
    },
    "include": ["src", "**/*.js", "**/*.jsx"]
}
